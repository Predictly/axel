<assembly>
	<id>bin</id>
	<formats>
		<format>tar.gz</format>
	</formats>
	<includeBaseDirectory>true</includeBaseDirectory>
	<!--<baseDirectory>clients</baseDirectory>-->
	<fileSets>
		<fileSet>
			<directory>src/main/bin</directory>
			<outputDirectory>bin</outputDirectory>
			<fileMode>0755</fileMode>
		</fileSet>
        <fileSet>
            <directory>src/main/resources</directory>
            <includes>
                <include>**/*</include>
            </includes>
            <excludes>
                <exclude>*.xml</exclude>
                <exclude>*-default.properties</exclude>
            </excludes>
            <outputDirectory>etc</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>src/main/etc</directory>
            <outputDirectory>etc</outputDirectory>
        </fileSet>
        <!--<fileSet>-->
            <!--<directory>target</directory>-->
            <!--<includes>-->
                <!--<include>*-shaded.jar</include>-->
            <!--</includes>-->
            <!--<outputDirectory>lib/bin</outputDirectory>-->
        <!--</fileSet>-->
	</fileSets>
    <files>
        <file>
            <source>target/${project.build.finalName}-shaded.jar</source>
            <outputDirectory>lib/bin</outputDirectory>
            <destName>shs-cmdline.jar</destName>
            <fileMode>0755</fileMode>
        </file>
    </files>
</assembly>
