<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:camel="http://camel.apache.org/schema/spring"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
       http://camel.apache.org/schema/spring http://camel.apache.org/schema/spring/camel-spring.xsd


       http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd">

	<import resource="classpath:META-INF/spring/camel-context.xml"/>

    <context:annotation-config/>

    <bean id="jmsConnectionFactory" class="org.apache.activemq.ActiveMQConnectionFactory">
       <property name="brokerURL" value="vm://axel?broker.persistent=false" />
    </bean>

    <bean class="se.inera.axel.shs.broker.rs.internal.MockConfig"/>

    <camel:errorHandler id="noErrorHandler" type="NoErrorHandler"/>

    <bean id="serverRouteBuilder" class="se.inera.axel.shs.broker.rs.internal.MockRouteBuilder" />
    <bean id="synchRouteBuilder" class="se.inera.axel.shs.broker.rs.internal.MockRouteBuilder" />


    <camel:camelContext xmlns="http://camel.apache.org/schema/spring"
                        id="shs-broker-asynchronous-test"
                        errorHandlerRef="noErrorHandler">

        <camel:propertyPlaceholder id="properties" location="ref:props"/>

        <!-- takes ShsMessageEntry objects and injects them into the asynchronous route -->
        <route>
            <from uri="direct:in-vm"/>
            <to uri="direct-vm:shs:asynch"/>
        </route>

        <!-- takes ShsMessage objects and deliver them to a mock endpoint
        (used to test the creation of errors/confirms/one-to-many) -->
        <route>
            <from uri="direct-vm:shs:rs" />
            <to uri="mock:createdMessages" />
        </route>

        <!-- listener for "remote" sent messages -->
        <route>
            <from uri="jetty://http://localhost:{{shsRsHttpEndpoint.port}}/rs" />
            <to uri="mock:sentMessages" />
        </route>

    </camel:camelContext>


    <bean id="props" class="org.springframework.beans.factory.config.PropertiesFactoryBean">
        <property name="singleton" value="false" />
        <property name="ignoreResourceNotFound" value="true" />

        <property name="properties">
            <props>

                <prop key="keyStoreParameters.resource">/certs/shs-test-server.p12</prop>
                <prop key="keyStoreParameters.type">pkcs12</prop>
                <prop key="keyStoreParameters.password">password</prop>

                <prop key="trustStoreParameters.resource">/certs/ca-certs.jks</prop>
                <prop key="trustStoreParameters.type">jks</prop>
                <prop key="trustStoreParameters.password">password</prop>

            </props>
        </property>
    </bean>


</beans>
