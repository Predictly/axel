<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:camel="http://camel.apache.org/schema/spring"
       xmlns:ctx="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
       http://camel.apache.org/schema/spring http://camel.apache.org/schema/spring/camel-spring.xsd
       http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

    <ctx:property-placeholder properties-ref="props" ignore-unresolvable="true" system-properties-mode="OVERRIDE"/>

    <bean id="dsRouteBuilder" class="se.inera.axel.shs.broker.ds.internal.DeliveryServiceRouteBuilder" />

    <bean id="shsHttpBinding" class="se.inera.axel.shs.broker.ds.internal.ShsHttpBinding" >
        <property name="messageLogService" ref="messageLogService"/>
    </bean>


    <camel:camelContext xmlns="http://camel.apache.org/schema/spring" id="shs-deliveryservice" managementNamePattern="#name#">
    	<camel:propertyPlaceholder id="properties" location="ref:props"/>

        <routeBuilder ref="dsRouteBuilder" />
    </camel:camelContext>
    
    <camel:sslContextParameters id="mySslContext" camelContextId="shs-deliveryservice">

		<camel:keyManagers keyPassword="{{keyStoreParameters.password}}">
			<camel:keyStore resource="{{keyStoreParameters.resource}}"
				password="{{keyStoreParameters.password}}" type="{{keyStoreParameters.type}}"/>
		</camel:keyManagers>
			
		<camel:trustManagers>
			<camel:keyStore resource="{{trustStoreParameters.resource}}"
				password="{{trustStoreParameters.password}}"  type="{{trustStoreParameters.type}}"/>
		</camel:trustManagers>
		
		<camel:clientParameters>
			
		</camel:clientParameters>

		<camel:serverParameters clientAuthentication="REQUIRE"/>

	</camel:sslContextParameters>
</beans>
