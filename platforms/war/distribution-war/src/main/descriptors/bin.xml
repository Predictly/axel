<assembly>

    <id>bin</id>

    <formats>
        <format>tar.gz</format>
    </formats>

    <fileSets>

        <!-- Copy over shs-cmdline into dist -->
        <fileSet>
            <directory>target/dependencies/shs-cmdline-${project.version}</directory>
            <outputDirectory>/</outputDirectory>
            <excludes>
                <exclude>bin/**</exclude>
            </excludes>
        </fileSet>

        <fileSet>
            <directory>target/dependencies/shs-cmdline-${project.version}</directory>
            <outputDirectory>/</outputDirectory>
            <includes>
                <include>bin/**</include>
            </includes>
            <fileMode>0755</fileMode>
        </fileSet>

        <!-- Copy over docs into dist -->
        <fileSet>
            <directory>target/dependencies/docs-${project.version}</directory>
            <includes>
                <include>**/*</include>
            </includes>
            <excludes>
                <exclude>**/*.sh</exclude>
            </excludes>
            <outputDirectory>/</outputDirectory>
        </fileSet>

        <fileSet>
            <directory>target/dependencies/docs-${project.version}</directory>
            <includes>
                <include>**/*.sh</include>
            </includes>
            <fileMode>0755</fileMode>
            <outputDirectory>/</outputDirectory>
        </fileSet>

        <!-- Copy over shs-broker-war & riv-shs-war into dist -->
        <fileSet>
            <directory>target/dependencies</directory>
            <includes>
                <include>*.war</include>
            </includes>
            <outputDirectory>/webapps</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>target/test-dependencies</directory>
            <includes>
                <include>*.war</include>
            </includes>
            <outputDirectory>/testwebapps</outputDirectory>
        </fileSet>
    </fileSets>

</assembly>
